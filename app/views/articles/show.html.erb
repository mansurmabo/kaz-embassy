<% if I18n.locale == :en && @article.en_title.present? %>
    <h3><%= @article.en_title %></h3>
<% elsif I18n.locale == :kz && @article.kz_title.present? %>
    <h3><%= @article.kz_title %></h3>
<% else %>
    <h3><%= @article.title %></h3>
<% end %>
<div class="article-image">
  <%= image_tag @article.image.url(:medium) unless @article.image_file_name.nil? %>
</div>
<div>
  <% if I18n.locale == :en && @article.en_content.present? %>
      <%= raw @article.en_content %>
  <% elsif I18n.locale == :kz && @article.kz_content.present? %>
      <%= raw @article.kz_content %>
  <% else %>
      <%= raw @article.content %>
  <% end %>
</div>